            "PatientRequest": {
                "required": [
                    "name",
                    "email"
                ],
                "properties": {
                    "name": {
                        "description": "name",
                        "format": "string",
                        "default": "Jane"
                    },
                    "date_of_birth": {
                        "description": "birthdate",
                        "format": "date",
                        "default": "1990-01-01"
                    },
