                    "password"
                ],
                "properties": {
                    "name": {
                        "description": "name",
                        "format": "string",
                        "default": "Jaane"
                    },
                    "email": {
                        "description": "email",
                        "format": "email",
                        "default": "jane@doe.com"
                    },
                    "password": {
                        "description": "password",
                        "format": "string",
                        "default": "password"
                    }
                },
                "type": "object"
            },
            "SessionRequest": {
                "required": [
